# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Snippet {
  id: ID!
  content: String!
  isArchived: Boolean!
  createdAt: String!
}

# データの一覧取得
type Query {
  snippets: [Snippet!]!
}

# データ操作系
type Mutation {
  # 新規作成
  createSnippet(content: String!): Snippet!

  # 内容の編集
  updateSnippet(id: ID!, content: String!): Snippet!

  # アーカイブ状態を切り替える
  toggleArchive(id: ID!): Snippet!
}